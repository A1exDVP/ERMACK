{%- if theme == 'material' -%}
    {%- import 'visual_concepts.md.j2' as icons -%}

    {%- set requirements_icon = icons.requirements -%}
    {%- set external_link_icon = icons.external_link -%}
{%- else -%}
    {%- set requirements_icon = '' -%}
    {%- set external_link_icon = '' -%}
{%- endif -%}


## Summary
